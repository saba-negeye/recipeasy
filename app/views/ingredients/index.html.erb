
<h1>Ingredients</h1>

<%= link_to 'New Ingredient', new_ingredient_path, class: 'btn btn-success mb-3' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Unit of Measurement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.unit_of_measurement %></td>
        <td><%= link_to 'Show', ingredient_path(ingredient), class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Delete', ingredient_path(ingredient), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
