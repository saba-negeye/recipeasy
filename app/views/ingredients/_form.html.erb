<div class="home-button">
  <%= link_to 'Home', root_path, class: 'btn btn-primary' %>
</div>


<div class="ingredient-form-container">
  <h1 class="form-title">Add New Ingredient</h1>

  <%= form_with(model: @ingredient, local: true) do |form| %>
    <% if @ingredient.errors.any? %>
      <div class="alert alert-danger">
        <h2>Please fix the following errors:</h2>
        <ul>
          <% @ingredient.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', placeholder: 'Enter ingredient name (e.g., Sugar)' %>
    </div>

    <div class="form-group">
      <%= form.label :unit_of_measurement, class: 'form-label' %>
      <%= form.text_field :unit_of_measurement, class: 'form-control', placeholder: 'Enter unit (e.g., grams, cups)' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Save Ingredient', class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  <%= link_to 'Back to Ingredients List', ingredients_path, class: 'btn btn-secondary mt-3' %>
</div>
