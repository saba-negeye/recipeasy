<h1><%= @recipe.title %></h1>
<p><%= @recipe.description %></p>

<h3>Cooking Steps:</h3>
<p><%= @recipe.cooking_steps %></p>
<h3>Ingredients</h3>
<ul>
  <% @recipe.recipe_ingredients.each do |ri| %>
    <li><%= ri.ingredient.name %> - <%= ri.quantity %> <%= ri.ingredient.unit_of_measurement %></li>
  <% end %>
</ul>
<%= link_to 'Edit', edit_recipe_path(@recipe), class: 'btn btn-warning' %>
<%= link_to 'Back', recipes_path, class: 'btn btn-secondary' %>

<%= button_to  'Delete', @recipe, method: :delete, data: { confirm: 'Are you sure you want to delete this recipe?' }, class: 'btn btn-danger' %>
